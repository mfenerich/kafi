{
  "name": "kafi-dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/kafi",
  "forwardPorts": [9092, 2181],
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "32gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "pip install -e .[dev] --no-cache-dir --no-deps --use-feature=fast-deps",
  "remoteUser": "root"
}
